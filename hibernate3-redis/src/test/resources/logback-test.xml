<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- help : http://logback.qos.ch/manual/appenders.html -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36}.%method : %msg%n</pattern>
            <immediateFlush>true</immediateFlush>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <logger name="org.hibernate.cache.redis" level="TRACE"/>
    <logger name="org.hibernate.test.cache.redis" level="TRACE"/>
    <logger name="org.hibernate.impl" level="TRACE" />
    <root level="TRACE">
        <appender-ref ref="console"/>
    </root>

</configuration>